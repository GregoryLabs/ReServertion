<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Todo: Personalize -->
    <title>@ViewData["Title"] - Server Reservation</title>
    <!-- Todo: Personalize -->
    <link runat="server" rel="shortcut icon" href="~/favicon.ico" type="image/x-icon" />
    <link runat="server" rel="icon" href="~/favicon.ico" type="image/ico" />

    <!-- #region REQUIRED CSS -->

    <!-- Bootstrap -->
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <!-- Date Range Picker-->
    <link href="~/lib/daterangepicker/daterangepicker.css" rel="stylesheet" />
    <!-- Bootstrap select-->
    <link href="~/lib/bootstrap-select/dist/css/bootstrap-select.css" rel="stylesheet" />
    <!-- DataTables -->
    <link href="~/lib/datatables/DataTables-1.10.18/css/dataTables.bootstrap4.css" rel="stylesheet" />
    <link href="~/lib/datatables/Buttons-1.5.6/css/buttons.bootstrap4.css" rel="stylesheet" />
    <link href="~/lib/datatables/ColReorder-1.5.0/css/colReorder.bootstrap4.css" rel="stylesheet" />
    <link href="~/lib/datatables/FixedColumns-3.2.5/css/fixedColumns.bootstrap4.css" rel="stylesheet" />
    <link href="~/lib/datatables/Select-1.3.0/css/select.bootstrap4.css" rel="stylesheet" />
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" />

    <!-- #endregion -->
</head>
<body class="bg-light">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary border-bottom box-shadow mb-0">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Server Reservation</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container bg-white p-3">
        <partial name="_CookieConsentPartial" />
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2019 - ServerReservation - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- #region REQUIRED JS SCRIPTS -->

    <!-- jQuery first, then Bootstrap JS -->
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
    <!-- Date Range Picker-->
    <script src="~/lib/daterangepicker/moment.min.js"></script>
    <script src="~/lib/daterangepicker/daterangepicker.js"></script>
    <!-- Bootstrap select-->
    <script src="~/lib/bootstrap-select/dist/js/bootstrap-select.js"></script>
    <!-- DataTables -->
    <script src="~/lib/datatables/DataTables-1.10.18/js/jquery.dataTables.js"></script>
    <script src="~/lib/datatables/DataTables-1.10.18/js/dataTables.bootstrap4.js"></script>
    <script src="~/lib/datatables/Buttons-1.5.6/js/buttons.bootstrap4.js"></script>
    <script src="~/lib/datatables/Buttons-1.5.6/js/dataTables.buttons.js"></script>
    <script src="~/lib/datatables/ColReorder-1.5.0/js/colReorder.bootstrap4.js"></script>
    <script src="~/lib/datatables/ColReorder-1.5.0/js/dataTables.colReorder.js"></script>
    <script src="~/lib/datatables/FixedColumns-3.2.5/js/fixedColumns.bootstrap4.js"></script>
    <script src="~/lib/datatables/FixedColumns-3.2.5/js/dataTables.fixedColumns.js"></script>
    <script src="~/lib/datatables/Select-1.3.0/js/select.bootstrap4.js"></script>
    <script src="~/lib/datatables/Select-1.3.0/js/dataTables.select.js"></script>
    <!-- Custom Scripts -->
    <script src="~/js/site.js"></script>
    <script src="~/js/dateRange.js"></script>
    <script src="~/js/dataTable.js"></script>

    <!-- #endregion -->

    @RenderSection("Scripts", required: false)
</body>
</html>
