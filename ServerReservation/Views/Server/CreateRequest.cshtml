@model ServerReservation.Models.Server

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Server - Create</h2>
<hr />
<div class="d-flex">
    <form asp-action="CreateRequest">
        <div class="card-deck">
            <div class="card bg-light mb-3">
                <div class="card-body">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <!-- Cost -->
                    <div class="form-group">
                        <label asp-for="Cost" class="control-label"></label>
                        <input asp-for="Cost" class="form-control" />
                        <span asp-validation-for="Cost" class="text-danger"></span>
                    </div>
                    <!-- Hostname -->
                    <div class="form-group">
                        <label asp-for="Hostname" class="control-label"></label>
                        <input asp-for="Hostname" class="form-control" />
                        <span asp-validation-for="Hostname" class="text-danger"></span>
                    </div>
                    <!-- CPU -->
                    <div class="form-group">
                        <label asp-for="CPU" class="control-label"></label>
                        <input asp-for="CPU" class="form-control" />
                        <span asp-validation-for="CPU" class="text-danger"></span>
                    </div>
                    <!-- Hard Drive -->
                    <label asp-for="HD" class="control-label"></label>
                    <div class="input-group  mb-3">
                        <input asp-for="HD" class="form-control" />
                        <div class="input-group-append">
                            <label asp-for="HDSize" class="control-label sr-only"></label>
                            <select asp-for="HDSize" asp-items="Html.GetEnumSelectList<FileSize>()"
                                    class="selectpicker form-control SelectListClassWhite" selectonTab="true"></select>
                        </div>
                    </div>
                    <span asp-validation-for="HD" class="text-danger"></span>
                    <span asp-validation-for="HDSize" class="text-danger"></span>
                    <!-- RAM -->
                    <label asp-for="RAM" class="control-label"></label>
                    <div class="input-group mb-3">
                        <input asp-for="RAM" class="form-control" />

                        <div class="input-group-append">
                            <label asp-for="RAMSize" class="control-label sr-only"></label>

                            <select asp-for="RAMSize" asp-items="Html.GetEnumSelectList<FileSize>()"
                                    class="selectpicker form-control SelectListClassWhite" selectonTab="true"></select>
                        </div>

                    </div>
                    <span asp-validation-for="RAMSize" class="text-danger"></span>
                    <span asp-validation-for="RAM" class="text-danger"></span>

                    <!-- Server Type -->
                    <div class="form-group">
                        <label asp-for="ServerType" class="control-label"></label>
                        <select asp-for="ServerType" asp-items="Html.GetEnumSelectList<ServerType>()"
                                class="selectpicker form-control SelectListClassWhite" title="Select Type..." selectonTab="true"></select>
                        <span asp-validation-for="ServerType" class="text-danger"></span>
                    </div>
                    <!-- Location -->
                    <div class="form-group">
                        <label asp-for="Location" class="control-label"></label>
                        <textarea asp-for="Location" class="form-control"></textarea>
                        <span asp-validation-for="Location" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="card bg-light mb-3">
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="MACAddress" class="control-label"></label>
                        <input asp-for="MACAddress" class="form-control" />
                        <span asp-validation-for="MACAddress" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="IPv4Address" class="control-label"></label>
                        <input asp-for="IPv4Address" class="form-control" />
                        <span asp-validation-for="IPv4Address" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="IPv6Address" class="control-label"></label>
                        <input asp-for="IPv6Address" class="form-control" />
                        <span asp-validation-for="IPv6Address" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SubnetMask" class="control-label"></label>
                        <input asp-for="SubnetMask" class="form-control" />
                        <span asp-validation-for="SubnetMask" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DefaultGateway" class="control-label"></label>
                        <input asp-for="DefaultGateway" class="form-control" />
                        <span asp-validation-for="DefaultGateway" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DHCPServer" class="control-label"></label>
                        <input asp-for="DHCPServer" class="form-control" />
                        <span asp-validation-for="DHCPServer" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DNSServer" class="control-label"></label>
                        <input asp-for="DNSServer" class="form-control" />
                        <span asp-validation-for="DNSServer" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="card bg-light mb-3">
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="MACAddress2" class="control-label"></label>
                        <input asp-for="MACAddress2" class="form-control" />
                        <span asp-validation-for="MACAddress2" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="IPv4Address2" class="control-label"></label>
                        <input asp-for="IPv4Address2" class="form-control" />
                        <span asp-validation-for="IPv4Address2" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="IPv6Address2" class="control-label"></label>
                        <input asp-for="IPv6Address2" class="form-control" />
                        <span asp-validation-for="IPv6Address2" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SubnetMask2" class="control-label"></label>
                        <input asp-for="SubnetMask2" class="form-control" />
                        <span asp-validation-for="SubnetMask2" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DefaultGateway2" class="control-label"></label>
                        <input asp-for="DefaultGateway2" class="form-control" />
                        <span asp-validation-for="DefaultGateway2" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DHCPServer2" class="control-label"></label>
                        <input asp-for="DHCPServer2" class="form-control" />
                        <span asp-validation-for="DHCPServer2" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DNSServer2" class="control-label"></label>
                        <input asp-for="DNSServer2" class="form-control" />
                        <span asp-validation-for="DNSServer2" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <a asp-action="Select">Back to List</a>
            <input type="submit" value="Continue" class="btn btn-primary pull-right" />
        </div>
    </form>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
